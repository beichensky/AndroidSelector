<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- item中的left、top、right、bottom相当于margin值，设置为负就会超出范围，看不见了。 -->

    <item
        android:gravity="center">
        <bitmap android:src="@mipmap/android"/>
    </item>

    <item
        android:gravity="center"
        android:left="20dp"
        android:top="20dp">
        <bitmap android:src="@mipmap/android"/>
    </item>

    <item
        android:gravity="center"
        android:left="40dp"
        android:top="40dp">
        <bitmap android:src="@mipmap/android"/>
    </item>

    <item
        android:gravity="center"
        android:left="60dp"
        android:top="60dp">
        <bitmap android:src="@mipmap/android"/>
    </item>

</layer-list>